{
  "name": "@chrislee/mcp-server-boilerplate",
  "version": "1.1.0",
  "description": "A MCP (Model Context Protocol) server boilerplate with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-server-boilerplate": "dist/index.js"
  },
  "scripts": {
    "build": "rspack build",
    "postbuild": "chmod +x dist/index.js && cp package.json README.md dist/",
    "dev": "nodemon -r dotenv/config --exec tsx src/index.ts | pino-pretty",
    "dev:rspack": "concurrently \"rspack build --watch\" \"nodemon -r dotenv/config dist/index.js | pino-pretty\"",
    "dev:setup": "./scripts/dev-setup.sh",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:inspector": "npx -y @modelcontextprotocol/inspector --config ./mcp-config.json --server mcp-server-boilerplate-cursor",
    "docker:build": "docker build -t mcp-server-boilerplate:local . --progress=plain",
    "docker:run": "./scripts/docker-run.sh"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "boilerplate",
    "server",
    "anthropic"
  ],
  "author": "MCP Server Boilerplate",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "axios": "^1.10.0",
    "base64url": "^3.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "iovalkey": "^0.3.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@rspack/cli": "^1.3.15",
    "@rspack/core": "^1.3.15",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "volta": {
    "node": ">=22.16.0",
    "npm": ">=10.7.0"
  }
}
